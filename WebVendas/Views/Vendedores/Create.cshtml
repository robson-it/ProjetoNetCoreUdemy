@model WebVendas.Models.ViewModel.VendedorFormViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Vendedores</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Vendedor.Name" class="control-label"></label>
                <input asp-for="Vendedor.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.Email" class="control-label"></label>
                <input asp-for="Vendedor.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.BirthDate" class="control-label"></label>
                <input asp-for="Vendedor.BirthDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.BaseSalary" class="control-label"></label>
                <input asp-for="Vendedor.BaseSalary" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.DepartamentoId" class="control-label"></label>
                <select asp-for="Vendedor.DepartamentoId" asp-items="@(new SelectList(Model.Departamentos,"Id","Name"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
